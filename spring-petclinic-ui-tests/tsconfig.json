{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": ["node", "@playwright/test"]
  },
  "include": ["tests/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "test-results", "playwright-report"]
}
